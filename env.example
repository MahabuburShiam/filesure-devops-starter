# FileSure Environment Configuration

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
# For production: mongodb://username:password@host:port/database

# Azure Blob Storage Configuration
AZURE_BLOB_CONN=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_CONTAINER=documents

# Application Configuration
LOG_LEVEL=INFO

# Docker Configuration
API_IMAGE=filesure/api:latest
WORKER_IMAGE=filesure/worker:latest
DOCKER_REGISTRY=docker.io

# Kubernetes Configuration
NAMESPACE=filesure
KUBE_CONFIG_PATH=~/.kube/config

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# CI/CD Configuration (for GitHub Actions)
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# Development Configuration
API_PORT=5001
WORKER_METRICS_PORT=9100